plugin "regexExpander" (200.0, 200.0)

global { 
    global.padding = 5.0 
    global.CANVAS_WIDTH = 200.0
    global.CANVAS_HEIGHT = 200.0

    global.container = Rectangle {
        x : ?
        y : ?
        sizeX : global.CANVAS_WIDTH
        sizeY : global.CANVAS_HEIGHT
        color   : Colors.none
        strokeColor : Colors.black
        strokeWidth : 1.5
    }
    global.minSizeFn = ensure minSize(global.container)
    global.maxSizeFn = ensure maxSize(global.container)
}


Colors {
    Colors.black = rgba(0.0, 0.0, 0.0, 1.0)
    Colors.gray = rgba(0.8, 0.8, 0.8, 1.0)
    Colors.darkgray = rgba(0.6, 0.6, 0.6, 1.0)
    Colors.red = rgba(1.0, 0.0, 0.0, 1.0)
    Colors.yellow = rgba(1.0, 1.0, 0.0, 1.0)
    Colors.lightKhaki = rgba(0.941, 0.902, 0.549, 1.0)
    Colors.orange = rgba(1.0, 0.6, 0.0, 1.0)
    Colors.lightorange = rgba(1.0, 0.6, 0.0, 0.25)
    Colors.green = rgba(0.0, 1.0, 0.0, 1.0)
    Colors.blue = rgba(0.0, 0.0, 1.0, 1.0)
    Colors.lightblue = rgba(0.0, 0.0, 1.0, 0.25)
    Colors.cyan = rgba(0.0, 1.0, 1.0, 1.0)
    Colors.purple = rgba(0.5, 0.0, 0.5, 1.0)
    Colors.white = rgba(1.0, 1.0, 1.0, 1.0)
    Colors.none = rgba(0.0, 0.0, 0.0, 0.0)
