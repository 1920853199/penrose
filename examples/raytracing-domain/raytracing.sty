DiffuseObject d {
    d.shape = Rectangle {
        angle  : 0
        color   : Colors.none
        strokeColor : Colors.black
        strokeWidth : 1.5
        x : global.container.x
        y : global.container.y
        sizeX : global.container.sizeX
        sizeY : global.container.sizeY
    }
    d.layering = d.shape above s.container
}

-- No "in path" predicate because scene geometry shouldn't depend directly on a path
SpecularObject o {
    -- create mirror shape and put it in scene
    o.shape = Image {
        lengthX : 100.0
        lengthY : 10.0
        sizeX : o.shape.lengthX
        sizeY : o.shape.lengthY
        path  : "mirror.svg"
        x: o.shape.centerX
        y: o.shape.centerY
    }
}

LightSource l {
    l.shape = Circle {
        color : Colors.lightKhaki
        r : 15.0
        strokeWidth : 0.0
    }
    l.text = Text {
        x : l.shape.x
        y : l.shape.y
        string : "L"
        color : Colors.black
    }
    l.textLayering = l.text above l.shape
}

Camera c {
    c.shape = Image {
        lengthX : 20.0
        lengthY : 20.0
        r : max(c.shape.lengthX, c.shape.lengthY) / 2.0
        path  : "eye.svg"
        x: c.shape.centerX
        y: c.shape.centerY
        -- HACK: who's looking for sizeX and sizeY, and the length* naming convention is weird
        sizeX: c.shape.lengthX
        sizeY: c.shape.lengthY
    }
    c.text = Text {
        string : "E"
        color : Colors.black
    }
    c.textLayering = c.text above c.shape
    c.positionFn = encourage near(c.shape, c.text, 0.0, 20.0)
}

-- applies to all scene geometries
SceneGeometry o {
    o.containFn = ensure contains(global.container, o.shape)
    o.layering  = o.shape above global.container
}

-- HACK: to make diffuse room below everybody
DiffuseObject d {
    d.layering = d.shape below global.container
}

