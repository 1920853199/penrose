Point p {
  p.shape = Circle {
    r = 3.0
    color = rgba(0.0, 0.0, 0.0, 1.0)
    stroke-width = 0
  }

  p.text = Text { string = p.label }
}

Point `a` {
  `a`.shape.x = 0.0
  `a`.shape.y = 0.0
  `a`.text.x = `a`.shape.x + 15.0
  `a`.text.y = `a`.shape.y + 15.0
}

Point `b`
with Point `a` {
  `b`.shape.x = `a`.shape.x + 100.0
  `b`.shape.y = `a`.shape.y + 200.0
  `b`.text.x = `b`.shape.x + 15.0
  `b`.text.y = `b`.shape.y + 15.0
}

Set X
with Point `b` {
  X.shape = Circle {
    stroke-width = 0
    color = rgba(1.0, 0.2, 1.0, 0.5)
    r = norm_(X.shape.x - `b`.shape.x, X.shape.y -`b`.shape.y)
  }

  X.text = Text { string = X.label }
  
  X.centerFn = encourage centerLabel(X.shape, X.text)
}