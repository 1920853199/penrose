global {
  -- objective sameX(a, b)
}

Point x {
  shape = Dot {
    label = Auto
  }

  objective centerLabel(x, x.label)
}

Point `a` {
  objective center(a)
}

Point `b` {
  shape = Dot {
    location = addVector(100.0, 200.0, a)
    label = Auto
  }
}

Set `c` {
  objective centerLabel(c, c.label)
  shape = Circle {
    color = computeColorRGBA(1.0, 0.2, 1.0, 0.5)
    radius = computeRadiusToMatch(c, b)
    label = Auto
  }
}