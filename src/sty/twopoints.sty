global {
  -- objective sameX(a, b)
}

Point x {
  shape = Dot {
    label = Auto
  }

  objective centerLabel(x, x.shape.label)
}

Point `a` {
  objective center(a)
}

Point `b` {
  shape = Dot {
    location = addVector(100.0, 200.0, a)
    label = Auto
  }
}

Set X {
  shape = Circle {
    color = computeColorRGBA(1.0, 0.2, 1.0, 0.5)
    radius = computeRadiusToMatch(X, b)
    label = Auto
  }
  
  objective centerLabel(X, X.shape.label)
}