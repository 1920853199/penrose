-- Tree.sty
Set x { 
    shape = Text { 
      text = Auto
      -- for text objects, the "text" param refers to the object and not its label
    }
}

Subset x y {
    objective above(y, x)
    objective sameX(x, y)
    shape =  Arrow {
        start = x.shape
        end   = y.shape
        text  = None
    }
}

Set x, Set y {
    objective repel(x, y)
}

Subset x S, Subset y S {
    objective sameHeight(x, y)
}
