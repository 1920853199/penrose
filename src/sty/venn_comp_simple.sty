global {
  global.padding = 15.0
}

Colors {
  Colors.black = rgba(0.0, 0.0, 0.0, 1.0)
  Colors.red = rgba(1.0, 0.0, 0.0, 1.0)
  Colors.lightGreen = rgba(0.1, 1.0, 0.2, 0.4)
}

Point p {
  p.shape = Circle {
    r = 3.0
    color = Colors.black
    stroke-width = 0
  }

  p.text = Text {
    string = p.label
    x = `p`.shape.x + global.padding
    y = `p`.shape.y + global.padding
  }

  -- p.labelFn = encourage centerLabel(p.shape, p.text)
}

Set X {
  X.shape = Circle {
    color = Colors.lightGreen
    stroke-width = 0
  }

  X.text = Text { string = X.label }
  
  X.centerFn = encourage centerLabel(X.shape, X.text)
}

Point p; Set X
where PointIn(p, X) {
  p.containFn = ensure contains(X.shape, p.shape)
}
