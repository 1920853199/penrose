Colors {
    Colors.black = rgba(0.0, 0.0, 0.0, 1.0)
    Colors.gray = rgba(0.8, 0.8, 0.8, 1.0)
    Colors.darkgray = rgba(0.6, 0.6, 0.6, 1.0)
    Colors.red = rgba(1.0, 0.0, 0.0, 1.0)
    Colors.yellow = rgba(1.0, 1.0, 0.0, 1.0)
    Colors.orange = rgba(1.0, 0.6, 0.0, 1.0)
    Colors.lightorange = rgba(1.0, 0.6, 0.0, 0.25)
    Colors.green = rgba(0.0, 1.0, 0.0, 1.0)
    Colors.blue = rgba(0.0, 0.0, 1.0, 1.0)
    Colors.lightblue = rgba(0.0, 0.0, 1.0, 0.25)
    Colors.cyan = rgba(0.0, 1.0, 1.0, 1.0)
    Colors.purple = rgba(0.5, 0.0, 0.5, 1.0)
    Colors.white = rgba(1.0, 1.0, 1.0, 1.0)
    Colors.none = rgba(0.0, 0.0, 0.0, 0.0)
    Colors.lightblue2 = rgba(0.82, 0.88, 0.94, 1.0)
}

global {
       global.pi_over_four = 0.78
       global.half_pi = 1.57
       global.pi = 3.14
       global.two_pi = 6.28
}

Point p {
      p.shape = Circle {
      	      x = 0.0
	      y = 0.0
	      r = 10.0
	      color = Colors.red
	      strokeWidth = 0.0
      }
}

Set X {
    -- X.dx = OPTIMIZED

    X.shape = Polygon {
	    points = testNonconvexPoly()

	    dx = OPTIMIZED
	    dy = OPTIMIZED
	    scaleX = 1.0
	    scaleY = 0.5
	    rotation = OPTIMIZED

	    -- transform = translate(X.dx, 0.0)
	    strokeWidth = 0.0
	    fillColor = setOpacity(Colors.blue, 0.5)
    }
}

Set `B` {
    -- `B`.shape.points = mkPoly(-100.0, 100.0, 100.0, 100.0, 100.0, -100.0, -100.0, -100.0)
    `B`.shape.points = randomPolygon(5)
    -- override `B`.shape.dx = -100.0
    -- override `B`.shape.dy = 200.0
    override `B`.shape.scaleX = 1.0
    override `B`.shape.scaleY = 3.0
    override `B`.shape.fillColor = setOpacity(Colors.green, 0.5)
}

Set `A`; Set `B` {
   LOCAL.objFn = encourage boundaryIntersect(`A`.shape, `B`.shape)
}
