global {
    objective toLeft(A, B)
    objective sameHeight(A, B)
    objective sameX(A, B) 
    constraint sameSizeAs(A, B) 
    -- objective sameX(A.label, B.label) 
    -- objective onTop(x, y)
    -- objective onTop(a, b)
    -- objective onTop(b, c)
}

Set s {
    shape = Ellipse { }
    -- constraint contains(s, s.label)
    constraint outsideOf(s.label, s)
    objective onTop(s, s.label)
    objective sameX(s, s.label)
}

Value f p q {
    shape = Arrow {
        start = p
        end   = q
        label = None
    }
}


Point p {
    shape = Dot { }
    objective centerLabel(p, p.label)
}

In p s {
    constraint contains(s, p)
    -- constraint contains(s, p.label)
    objective sameX(p, s)
    objective sameHeight(p, s)
}

In p `A`, In q `A` {
    objective sameX(p, q)
    objective repel(p, q)
}

In p `B`, In q `B` {
    objective sameX(p, q)
    objective repel(p, q)
}

