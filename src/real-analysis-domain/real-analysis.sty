Colors {
  Colors.black = rgba(0.0, 0.0, 0.0, 1.0)
  Colors.gray = rgba(0.8, 0.8, 0.8, 1.0)
}

Reals R {
  R.y = 100.0
  
  R.shape = Arrow {
    startX = -100.0
    startY = R.y
    endX = 300.0
    endY = R.y
    thickness = 5.0
    color = Colors.gray
    rotation = 0.0
  }

  R.text = Text {
    string = R.label
    rotation = 0.0
  }

  R.labelFn = ensure nearHead(R.shape, R.text, 10.0, 10.0)
}

Real r
with Reals R
where In(r, R) {
  r.val = OPTIMIZED
  r.len = 20.0
  
  r.shape = Line {
    startX = r.val
    startY = R.y - (r.len / 2.0)
    endX = r.val
    endY = R.y + (r.len / 2.0)
    thickness = 2.5
    color = Colors.black
  }

  r.text = Text {
    string = r.label
    rotation = 0.0
  }

  r.inFn = ensure inRange(r.val, R.shape.startX, R.shape.endX)
  r.labelFn = encourage nearHead(r.shape, r.text, 10.0, 10.0)
}
